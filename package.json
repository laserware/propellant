{
  "name": "propellant",
  "version": "0.0.1",
  "description": "GitHub Action for publishing @laserware packages to npm.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir build --target node --minify",
    "test": "bun test",
    "prettier": "prettier --write src"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "github-action",
    "tag",
    "semver",
    "npm"
  ],
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "@types/bun": "latest",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
